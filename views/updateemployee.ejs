<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Employee</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 20px;
        }
    </style>

</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Logo</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <form action="/getlist" method="get">
                            <button class="nav-link btn btn-link" type="submit">Employee List</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <a id="createEmployeeBtn" class="nav-link" href="#">Create Employee</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <form action="/logout" method="get">
                        <button class="btn btn-outline-success" type="submit">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>
    <h3 class="container mt-5 d-flex justify-content-center">Update Employee data</h3>
    <div class="container mt-5 d-flex justify-content-center">
    <form id="employeeForm" action="/update-employee/<%= employeeData.f_Email %>" method="post" enctype="multipart/form-data" class="mt-3 p-4 border rounded shadow-sm" style="width: 100%; max-width: 600px;">
        <!-- Employee Name -->
        <div class="mb-3">
            <label for="employeeName" class="form-label">Name</label>
            <input type="text" id="employeeName" name="f_Name" class="form-control" value="<%= employeeData.f_Name %>" required>
        </div>
        
        <!-- Employee Email -->
        <div class="mb-3">
            <label for="employeeEmail" class="form-label">Email</label>
            <input type="email" id="employeeEmail" name="f_Email" class="form-control" value="<%= employeeData.f_Email %>" required>
        </div>
        
        <!-- Mobile Number -->
        <div class="mb-3">
            <label for="employeeMobile" class="form-label">Mobile No.</label>
            <input type="tel" id="employeeMobile" name="f_Mobile" class="form-control" value="<%= employeeData.f_Mobile %>" required>
        </div>
        
        <!-- Designation Dropdown -->
        <div class="mb-3">
            <label for="employeeDesignation" class="form-label">Designation</label>
            <select id="employeeDesignation" name="f_Designation" class="form-select" required>
                <option value="HR" <%= employeeData.f_Designation === 'HR' ? 'selected' : '' %>>HR</option>
                <option value="Manager" <%= employeeData.f_Designation === 'Manager' ? 'selected' : '' %>>Manager</option>
                <option value="Sales" <%= employeeData.f_Designation === 'Sales' ? 'selected' : '' %>>Sales</option>
            </select>
        </div>
        
        <!-- Gender Radio Buttons -->
        <div class="mb-3">
            <label class="form-label">Gender</label>
            <div>
                <input type="radio" id="genderMale" name="f_Gender" value="Male" <%= employeeData.f_Gender === 'Male' ? 'checked' : '' %> required>
                <label for="genderMale" class="form-check-label">Male</label>
            </div>
            <div>
                <input type="radio" id="genderFemale" name="f_Gender" value="Female" <%= employeeData.f_Gender === 'Female' ? 'checked' : '' %> required>
                <label for="genderFemale" class="form-check-label">Female</label>
            </div>
        </div>
        
        <!-- Course Checkboxes -->
        <div class="mb-3">
            <label class="form-label">Courses</label>
            <% const selectedCourses = employeeData.f_Courses; %>
            <div>
                <input type="checkbox" id="courseMBA" name="f_Courses[]" value="MBA" <%= selectedCourses.includes('MBA') ? 'checked' : '' %>>
                <label for="courseMBA" class="form-check-label">MBA</label>
            </div>
            <div>
                <input type="checkbox" id="courseMCA" name="f_Courses[]" value="MCA" <%= selectedCourses.includes('MCA') ? 'checked' : '' %>>
                <label for="courseMCA" class="form-check-label">MCA</label>
            </div>
            <div>
                <input type="checkbox" id="courseBCA" name="f_Courses[]" value="BCA" <%= selectedCourses.includes('BCA') ? 'checked' : '' %>>
                <label for="courseBCA" class="form-check-label">BCA</label>
            </div>
            <div>
                <input type="checkbox" id="courseBSC" name="f_Courses[]" value="BSC" <%= selectedCourses.includes('BSC') ? 'checked' : '' %>>
                <label for="courseBSC" class="form-check-label">BSC</label>
            </div>
        </div>
        
        <!-- Image Upload -->
        <div class="mb-3">
            <label for="employeeImage" class="form-label">Upload Image</label>
            <input type="file" id="employeeImage" name="f_Image" class="form-control" accept="image/*">
        </div>
        
        <!-- Submit Button -->
        <button type="submit" class="btn btn-success w-100">Submit</button>
    </form>
    
</div>
    
</body>
</html>
